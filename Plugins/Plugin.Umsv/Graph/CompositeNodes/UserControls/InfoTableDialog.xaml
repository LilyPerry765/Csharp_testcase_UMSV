<Window x:Class="Pendar.Ums.CompositeNodes.UserControls.InfoTableDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ليست رکوردهای جدول اطلاعات گويا"
        FlowDirection="RightToLeft"
        FontFamily="Tahoma"
        WindowStartupLocation="CenterOwner"
        Height="330"
        Width="512">
    <Window.Resources>
        <Style TargetType="ToolTip">
            <Setter Property="FontFamily"
                    Value="Tahoma" />
        </Style>
    </Window.Resources>
    <DockPanel>
        <ToolBar DockPanel.Dock="Top"
                 ToolBarTray.IsLocked="True">
            <Button x:Name="importButton"
                    Click="importButton_Click"
                    ToolTip="دريافت ليست اطلاعات">
                <Image Source="../../../Images/import.png"
                       Height="24" />
            </Button>
            <Button x:Name="clearButton"
                    Click="clearButton_Click"
                    ToolTip="حذف تمامی رکورد های موجود">
                <Image Source="../../../Images/delete.png"
                       Height="20" />
            </Button>
        </ToolBar>
        <StackPanel DockPanel.Dock="Bottom"
                    FlowDirection="LeftToRight"
                    Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width"
                            Value="70" />
                    <Setter Property="Height"
                            Value="21" />
                    <Setter Property="Margin"
                            Value="2" />
                </Style>
            </StackPanel.Resources>
            <Button IsCancel="True">انصراف</Button>
            <Button x:Name="okButton"
                    IsDefault="True"
                    Click="okButton_Click">تاييد</Button>
        </StackPanel>
        <DataGrid  x:Name="dataGrid"
                   IsReadOnly="True"
                   Margin="2"
                   AutoGenerateColumns="False"
                   VerticalGridLinesBrush="LightGray"
                   HorizontalGridLinesBrush="LightGray"
                   CanUserResizeRows="False"
                   AlternatingRowBackground="#ADAEE0FC"
                   AlternationCount="1"
                   RowDetailsVisibilityMode="Collapsed"
                   SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Width="Auto"
                                    Header="شناسه"
                                    Binding="{Binding ID}" />
                <DataGridTextColumn Width="*"
                                    Header="اطلاعات"
                                    Binding="{Binding Data}" />
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu FontFamily="Tahoma">
                    <MenuItem Header="دريافت ليست اطلاعات"
                              Click="importButton_Click">
                        <MenuItem.Icon>
                            <Image Source="../../../Images/import.png"
                                   Height="16" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem  Header="حذف تمامی رکورد های موجود"
                               Click="clearButton_Click">
                        <MenuItem.Icon>
                            <Image Source="../../../Images/delete.png"
                                   Height="16" />
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </DockPanel>
</Window>
