<Window x:Class="Pendar.Ums.CompositeNodes.VoiceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        FontFamily="Tahoma"
        FlowDirection="RightToLeft"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        xmlns:f="clr-namespace:Folder.Audio;assembly=Folder.Audio"
        Height="207"
        Width="328">
    <DockPanel>
        <StackPanel Background="#FFEFEFEF"
                    FlowDirection="LeftToRight"
                    Orientation="Horizontal"
                    DockPanel.Dock="Bottom">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width"
                            Value="70" />
                    <Setter Property="Height"
                            Value="22" />
                    <Setter Property="Margin"
                            Value="10,10,0,10" />
                </Style>
            </StackPanel.Resources>
            <Button x:Name="cancelButton"
                    IsCancel="True">انصراف</Button>
            <Button x:Name="okButton"
                    IsDefault="True"
                    Click="okButton_Click">تاييد</Button>
        </StackPanel>
        <Grid Margin="2,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <f:SoundControl x:Name="soundControl"
                            Grid.Column="1"
                            VerticalAlignment="Top"
                            Margin="10"
                            HorizontalAlignment="Right"
                            Width="192" />
            <Label VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="5"
                   Grid.Row="1">عنوان پيام:</Label>
            <TextBox Height="23"
                     Grid.Column="1"
                     Grid.Row="1"
                     Name="nameTextBox"
                     VerticalAlignment="Top"
                     Margin="0,10,10,0"
                     HorizontalAlignment="Right"
                     Width="192" />
            <Label Content="محتوای پیام:"
                   Margin="5"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center" />
        </Grid>
    </DockPanel>
</Window>
