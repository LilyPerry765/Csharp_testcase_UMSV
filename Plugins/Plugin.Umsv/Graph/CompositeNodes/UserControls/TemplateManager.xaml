<UserControl x:Class="Pendar.Ums.CompositeNodes.UserControls.TemplateManager"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             FlowDirection="RightToLeft"
             mc:Ignorable="d"
             d:DesignHeight="66"
             d:DesignWidth="300">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>قالب: </Label>
            <Label x:Name="TemplateNameLabel"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5,0,0,0">
            <Button  Height="35" Width="35" ToolTip="مشاهده">
                <Button.Content>
                    <WrapPanel>
                        <Image Source="pack://application:,,,/Plugin.Umsv;component/Images/view.png" Width="35"/>
                    </WrapPanel>
                </Button.Content>
            </Button>
            <Button  Height="35" Width="35" ToolTip="ویرایش" Click="EditButton_Click">
                <Button.Content>
                    <WrapPanel>
                        <Image Source="pack://application:,,,/Plugin.Umsv;component/Images/edit.png" Width="35"/>
                    </WrapPanel>
                </Button.Content>
            </Button>
            <Button  Height="35" Width="35" ToolTip="اضافه" Click="AddButton_Click">
                <Button.Content>
                    <WrapPanel>
                        <Image Source="pack://application:,,,/Plugin.Umsv;component/Images/add.png" Width="35"/>
                    </WrapPanel>
                </Button.Content>
            </Button>
            <Button  Height="35" Width="35" ToolTip="حذف">
                <Button.Content>
                    <WrapPanel>
                        <Image Source="pack://application:,,,/Plugin.Umsv;component/Images/delete.png" Width="35"/>
                    </WrapPanel>
                </Button.Content>
            </Button>
        </StackPanel>
        <!--<TextBox x:Name="boxNoTextBox"
                 TextChanged="boxNoTextBox_TextChanged"
                 PreviewTextInput="boxNoTextBox_TextInput" />-->
    </StackPanel>
</UserControl>
