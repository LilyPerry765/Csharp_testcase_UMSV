<Window x:Class="Plugin.Mailbox.ExtractMessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:f="clr-namespace:Folder.Audio;assembly=Folder.Audio"
        FontFamily="Tahoma"
        FlowDirection="RightToLeft"
        Title="استخراج پیام"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        Topmost="True" ShowInTaskbar="False">
    <DockPanel>
        <Grid Width="300" Height="100">
            <Grid.RowDefinitions>
                <RowDefinition Height="27"/>
                <RowDefinition Height="27"/>
                <RowDefinition Height="27"/>
            </Grid.RowDefinitions>
            <TextBlock Text="استخراج پیام ها..." FontFamily="Tahoma" Margin="5,5,5,5"/>
            <ProgressBar FlowDirection="LeftToRight" Grid.Row="1" Margin="5,5,5,5" x:Name="messageExtractProgressBar"/>
            <Button Grid.Row="2" Content="شروع" FontFamily="Tahoma" Width="80" Click="Button_Click" x:Name="startButton"/>
        </Grid>
    </DockPanel>
</Window>
