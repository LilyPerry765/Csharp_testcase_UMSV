<UserControl x:Class="UMSV.BlackCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Height="50" Width="160" Cursor="Hand">
    <Border Margin="2" Padding="5" DockPanel.Dock="Top" CornerRadius="10" BorderThickness="2" BorderBrush="WhiteSmoke" Background="Black">
        <DockPanel>
            <CheckBox VerticalAlignment="Center" Margin="5" Name="Control" Checked="Control_Checked" Unchecked="Control_Checked" />
            <Label Name="Label" VerticalAlignment="Center" FontSize="16" FontFamily="Arial" Foreground="White" />
        </DockPanel>
    </Border>
</UserControl>
