        public static string MakeFullTextToken(string token)
        {
            if (token.Trim() == string.Empty || token == null)
            {
                token = "";
                return token;
            }
            
            token = token.TrimEnd();

            string searchToken;
            searchToken = token.Replace(" ", "*\" and \"");
            searchToken = "\"" + searchToken + "*\"";
