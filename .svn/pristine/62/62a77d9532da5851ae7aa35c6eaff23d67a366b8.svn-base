<UserControl x:Class="Pendar._118.JobsListForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"  FlowDirection="RightToLeft"
             d:DesignHeight="300" d:DesignWidth="300">
    <DataGrid Name="dataGrid">
        <DataGrid.Columns>
            <DataGridTextColumn Header="کد" Binding="{Binding ID, Mode=TwoWay}" />
            <DataGridTextColumn Header="مخفف" Binding="{Binding Abbreviation, Mode=TwoWay}" />
            <DataGridTextColumn Header="عنوان شغل" Binding="{Binding Name, Mode=TwoWay}" />
        </DataGrid.Columns>
    </DataGrid>
</UserControl>
