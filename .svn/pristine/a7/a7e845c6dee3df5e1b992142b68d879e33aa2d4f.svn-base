.table-bottom
{
	background-image: url('/images/form/b.png');
	background-repeat: repeat-x;
	background-position: bottom;
}
.table-top
{
	background-image: url('/images/form/t.png');
	background-repeat: repeat-x;
	background-position: top;
}
.table-right
{
	background-image: url('/images/form/r.png');
	background-repeat: repeat-y;
	background-position: right;
}
.table-left
{
	background-image: url('/images/form/l.png');
	background-repeat: repeat-y;
	background-position: left;
}
.form-step
{
	font-family: B Titr, Titr, Arial;
	font-size: 16pt;
}
.form-sub
{
	font-family: Tahoma;
	font-size: 7pt;
}
.table-header
{
	background-color: #eeeeee;
	border: 1px solid #cccccc;
	width: 100%;
	padding: 10px;
	margin: 10px 0 10px 0;
}
.form-legend
{
	margin-bottom: 5px;
	background-color: #eeeeee;
	border: 1px solid #cccccc;
}
.register-table
{
	width: 100%;
	margin: 5px;
}

.register-table .titles
{
	width: 120px;
	background-color: #f6f6f6;
	vertical-align: top;
	padding: 5px;
}
.register-table .controls input
{
	padding-top: 2px;
	padding-bottom: 2px;
}

.form-radio *
{
	border-style: none;
	border-width: 0;
	vertical-align: middle;
}
.form-radio label
{
	margin-right: 2px;
	margin-left: 7px;
}

.requests-list td, .request-type td
{
    padding-bottom: 6px;
}

.requests-list label, .request-type label
{
    padding-right: 6px;
    vertical-align: middle;
}
.requests-list input, .request-type input
{
    padding-right: 6px;
    vertical-align: middle;
    border: 0 none white;
}
.request-text
{
    line-height: 200%;
    text-align: justify;
    padding: 10px;
}
.controls .size-a
{
	width: 200px;
}
.controls select.size-a
{
	width: 204px;
}
.controls .size-b
{
	width: 565px;
}
.controls .size-c
{
	width: 100px;
}
.expander
{
    border-style: none solid solid solid;
    background-color: White;
    direction: rtl;
    border-right-width: 1px;
    border-bottom-width: 1px;
    border-left-width: 1px;
    border-right-color: #CCCCCC;
    border-bottom-color: #CCCCCC;
    border-left-color: #CCCCCC;
}
.expander *
{
    text-align:right;
    direction: rtl;
}